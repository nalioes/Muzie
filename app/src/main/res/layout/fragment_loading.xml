<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@color/light_dark"
    tools:context="com.syncsource.org.muzie.LoadingFragment">
    <ProgressBar
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:indeterminateTint="@color/my_color_2"
        android:indeterminateTintMode="src_in"
        android:theme="@style/Material.Drawable.CircularProgress.Determinate"
        android:layout_marginBottom="@dimen/margin_header"
        />
</RelativeLayout>
